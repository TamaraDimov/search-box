<%= link_to 'Back', root_path, class: "style-link" %>

<h3 style="color: #333; font-size: 24px; text-align: center;" class="article">Top 10 articles</h3>
<table style="width: 100%;" class="table">
  <% @articles.each do |article| %>
    <tr>
      <td style="padding: 10px; border: 1px solid #ddd; gap:50px">
        <h4 style="color: #444; margin-bottom: 5px;"><%= article.title %></h4>
        <p style="color: #666; margin: 0; "><%= article.body %></p>
      </td>
    </tr>
  <% end %>
</table>

